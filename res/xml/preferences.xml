<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
<PreferenceCategory
        android:title="External Resources">
    <EditTextPreference
            android:title="JSON Url"
            android:summary="Url for fetching library JSON data"
            android:defaultValue="http://music.creasetoph.com:1338/music/json"
            android:key="json_url" />
    <EditTextPreference
            android:title="Stream Url"
            android:summary="Url for streaming media"
            android:defaultValue="http://music.creasetoph.com:1338/music/stream"
            android:key="stream_url" />
    <EditTextPreference
            android:title="Local Path"
            android:summary="Path for local music"
            android:defaultValue="/sdcard/music"
            android:key="local_path" />
    <ListPreference
            android:title="Media Location"
            android:summary="Location to fetch media"
            android:defaultValue="network"
            android:entries="@array/media_location"
            android:entryValues="@array/media_location_values"
            android:key="media_location" />
</PreferenceCategory>
</PreferenceScreen>